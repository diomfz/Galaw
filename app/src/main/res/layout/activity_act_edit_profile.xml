<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actEditProfile"
    android:background="@drawable/backgroundgrey"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/backgroundhome"
        >
        <Button
            android:id="@+id/backProfile"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/backicon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"

            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/galawlogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/editphoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/editppicon"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="180dp"

            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="200dp"
            android:id="@+id/name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/editname"
            android:background="@drawable/editnameicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="260dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:textSize="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:layout_marginTop="30dp"
            android:textSize="14dp"
            />
        <Button
            android:id="@+id/save"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:background="@drawable/buttonstroke"
            android:text="Save"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:layout_marginTop="30dp"
            android:textSize="14dp"
            />
    </LinearLayout>


</RelativeLayout>