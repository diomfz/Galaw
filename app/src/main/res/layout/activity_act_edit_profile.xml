<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actEditProfile"
    android:background="@drawable/backgroundgrey"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/backgroundhome"
                >
                <Button
                    android:id="@+id/backProfile"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backicon"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/profileicon"
                    android:layout_marginTop="25dp"
                    android:layout_centerInParent="true"
                    />



                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="200dp"
                    android:id="@+id/nameProfile"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/editProfile"
                    android:background="@drawable/editnameicon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="360dp"
                    android:layout_marginTop="20dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Email"
                    android:textSize="12dp"
                    android:background="@drawable/white"
                    android:paddingLeft="10dp"
                    android:textColor="#7B5CFF"
                    />

                <TextView
                    android:paddingLeft="10dp"
                    android:id="@+id/emailProfile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:background="@drawable/white"
                    />
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@drawable/white"
                    android:text="nomor telefon"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#7B5CFF"
                    />

                <TextView
                    android:id="@+id/phoneProfile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    android:background="@drawable/white"
                    />

                <Button
                    android:id="@+id/resetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/whitebtn"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="ganti kata sandi"
                    android:textSize="15dp"
                    android:textColor="#C062F5"
                    />

                <TextView
                    android:id="@+id/verifyMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text=" Email tidak terverifikasi"
                    android:textColor="#F40E0E"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/resendCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/whitebtn"
                    android:text="VERIFIKASI SEKARANG"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:onClick="logout"
                    android:text="KELUAR"
                    android:textColor="#C062F5"
                    android:background="@drawable/whitebtn"
                    android:textSize="15dp"
                    android:layout_marginBottom="30dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>