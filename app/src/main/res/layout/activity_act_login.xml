<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actLogin">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password ?" />

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:text="Welcome"
                    android:layout_gravity="center"
                    android:layout_marginTop="80dp"
                    />
                <ImageView
                    android:layout_width="122dp"
                    android:layout_height="122dp"
                    android:src="@drawable/galawlogo"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="galaw Apps"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

                <EditText
                    android:background="@drawable/etboxstroke"
                    android:id="@+id/email"
                    android:autofillHints=""
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:layout_width="307dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="80dp"
                    />

                <EditText
                    android:background="@drawable/etboxstroke"
                    android:id="@+id/password"
                    android:autofillHints=""
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:layout_width="307dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    />

                <Button
                    android:background="@drawable/custombutton"
                    android:id="@+id/loginButton"
                    android:layout_width="307dp"
                    android:layout_height="40dp"
                    android:text="Log In"
                    android:textColor="#ffffff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.532"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="385dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:text="New here ?"
                        android:textSize="12dp"

                        />

                    <Button
                        android:id="@+id/buttonSignup"
                        android:layout_width="178dp"
                        android:layout_height="14dp"




                        android:text="Click Here"
                        android:textSize="12dp"
                        android:textColor="#7B5CFF"

                        />


                </LinearLayout>

                <Button
                    android:background="@drawable/buttonstroke"
                    android:layout_width="307dp"
                    android:layout_height="39dp"
                    android:id="@+id/buttonstroke"
                    android:layout_gravity="center"
                    android:text="log in with google"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="OR" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="24dp"
                    >
                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="14dp"
                        android:text="Don't have an account?"
                        android:layout_gravity="center"
                        android:textSize="12dp"

                        />
                    <TextView
                        android:id="@+id/signup"
                        android:layout_width="178dp"
                        android:layout_height="14dp"
                        android:text="Sign up here"
                        android:textSize="12dp"
                        android:textColor="#7B5CFF"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

