<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actLogin"
    android:background="@drawable/backgroundgrey"
    >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat Datang Di"
                        android:layout_gravity="center"
                        android:layout_marginTop="80dp"
                        />
                    <ImageView
                        android:layout_width="122dp"
                        android:layout_height="122dp"
                        android:src="@drawable/galawlogo"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aplikasi galaw V.2"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <EditText
                        android:background="@drawable/etboxstroke"
                        android:id="@+id/email"
                        android:autofillHints=""
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:layout_width="307dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:textSize="15dp"
                        />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="password_toggle"

                    >
                    <EditText
                        android:background="@drawable/etboxstroke"
                        android:id="@+id/password"
                        android:autofillHints=""
                        android:inputType="textPassword"
                        android:layout_width="307dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_marginTop="20dp"
                        android:textSize="15dp"
                        android:hint="Kata Sandi"
                        />
                </com.google.android.material.textfield.TextInputLayout>




                    <Button
                        android:background="@drawable/custombutton"
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Masuk"
                        android:textColor="#ffffff"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.532"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="385dp"
                        android:layout_marginLeft="50dp"
                        android:textSize="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        />




                    <TextView
                        android:id="@+id/forgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LUPA KATA SANDI?"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="#C062F5"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AKUN BARU?"
                            android:textSize="12dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="10dp"
                            />

                        <Button
                            android:id="@+id/buttonSignup"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="TEKAN DISINI"
                            android:textSize="12dp"
                            android:background="@null"
                            android:layout_marginLeft="80dp"
                            android:textColor="#C062F5"
                            />

                    </RelativeLayout>
                <com.google.android.gms.common.SignInButton

                    android:id="@+id/signIn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"

                    />
                </LinearLayout>

        </ScrollView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

